---
export interface Props {
  id: string;
  title: string;
  img: string;
}
const { id, title, img } = Astro.props
---

<a class="hover:scale-105 inline-block transition-all hover:contrast-125 hover:shadow-2xl" href=`/${id}`>
  <img class="aspect-[189/250] h-full object-cover w-full max-w-full rounded" src={img} alt={title} style=`view-transition-name: book-${id}`>
</a>