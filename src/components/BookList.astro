---

import BookItem from "./BookItem.astro";
import { books } from "../data/books.js";
---
<ul class="grid grid-cols-2 md:grid-cols-3 gap-3">
  { 
    books.map(book => {
      return (
        <li>
          <BookItem
            id={book.id}
            title={book.title}
            img={book.img}
          />
        </li>
      )
    })
  }
</ul>